<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/recommend_adapter_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/recommend_adapter_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/recommend_adapter_img"
        android:layout_toLeftOf="@+id/recommend_adapter_app_property_layout"
        android:text="mobo"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/text_light_grey" />

    <TextView
        android:id="@+id/recommend_adapter_app_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/recommend_adapter_app_name"
        android:layout_toRightOf="@+id/recommend_adapter_img"
        android:text="mobo team" 
        android:layout_marginBottom="3dp"
        android:textColor="@color/text_light_grey"/>

    <TextView
        android:id="@+id/recommend_adapter_app_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recommend_adapter_rating"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/recommend_adapter_app_property_layout"
        android:text="5M"
        android:textColor="@color/white" />

    <RatingBar
        android:id="@+id/recommend_adapter_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/recommend_adapter_app_property_layout"
        android:numStars="5"
        android:rating="5" />

    <LinearLayout
        android:id="@+id/recommend_adapter_app_property_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/recommend_adapter_app_property_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textColor="@color/text_light_grey"/>

        <ImageView
            android:id="@+id/recommend_adapter_app_property_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/recommend_property_img" />
    </LinearLayout>

</RelativeLayout>