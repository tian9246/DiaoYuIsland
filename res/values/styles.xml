    <style name="ShadowStyleForWhite">
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="ShadowStyleForGrey">
        <item name="android:textColor">#afff</item>
        <item name="android:shadowColor">#a000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="ShadowStyleForBlack">
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="progress_bar_style" parent="android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_bar</item>
    </style>

    <style name="no_media_button">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item> 
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:background">@null</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="activityTitlebar" parent="android:Theme">
        <item name="android:background">#778899</item>
        <item name="android:windowTitleSize">32dp</item>
    </style>

